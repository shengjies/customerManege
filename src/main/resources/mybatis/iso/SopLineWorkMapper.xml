	<delete id="deleteSopLineWorkById" parameterType="Integer">
        delete from tab_sop_line_work where id = #{id}
    </delete>
	
    <delete id="deleteSopLineWorkByIds" parameterType="String">
        delete from tab_sop_line_work where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
