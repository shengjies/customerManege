			<if test="sopId != null  ">sop_id,</if>
			<if test="wId != null  ">w_id,</if>
			<if test="pageId != null  ">page_id,</if>
			<if test="cId != null  ">c_id,</if>
			<if test="cTime != null  ">c_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
